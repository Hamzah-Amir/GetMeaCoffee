model User {
  id            String   @id @default(cuid())
  name          String?
  username      String? @unique
  email         String?  @unique
  profilepic         String? 
  coverpic         String? 
  emailVerified DateTime?
  accounts      Account[]
  sessions      Session[]
  razorpayPayments RazorpayPayment[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


model RazorpayPayment {
  orderId    String  @id // Razorpay order ID as primary key
  to_user    String  // Username of the creator being supported
  name  String  // Username of the user making the payment
  message    String
  amount     Decimal @db.Decimal(10, 2)
  currency   String
  
  // Relations
  user       User    @relation(fields: [name], references: [username], onDelete: Cascade)

  @@index([to_user])
  @@index([name])
}

